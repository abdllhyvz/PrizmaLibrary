@{
    Layout = "_OfficerLayout";
}
@model List<rolesmodel.RolesModel>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="background-color:#F6F5EC;">
                <div class="card-header">
                    <h4>Kitap Ekle</h4>
                </div>
                <div class="card-body">
                    <form action="/Officer/AddBook" method="post">
                        <div class="form-group">
                            <label for="title">Kitap Adı</label>
                            <input type="text" class="form-control" id="title" placeholder="Kitap Adı" name="title" required>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="description">Açıklama</label>
                            <input type="text" class="form-control" id="description" placeholder="Açıklama" name="description" required>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="author">Yazar</label>
                            <input type="text" class="form-control" id="author" placeholder="Yazar" name="author" required>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>