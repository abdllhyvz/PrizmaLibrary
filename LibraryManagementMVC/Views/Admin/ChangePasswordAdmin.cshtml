@{
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="background-color:#F6F5EC;">
                <div class="card-header">
                    <h4>Şifre Değiştir</h4>
                </div>
                <div class="card-body">
                    <form action="/Admin/ChangePasswordAdmin" method="post">
                        <div class="form-group">
                            <label for="email">Şifre</label>
                            <input type="text" class="form-control" id="email" placeholder="Şifre" name="currentPassword" required>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="phone">Yeni Şifre</label>
                            <input type="text" class="form-control" id="phone" placeholder="Yeni Şifre" name="newPassword" required>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {
        if ('@ViewBag.message' != "") {
            Swal.fire({
                title: '@ViewBag.message',
            });
        }
    });
</script>